{
  "compilerOptions": {
    "noImplicitAny": true,
    "checkJs": false,
    "allowUnreachableCode": true,
    
    "allowJs": true,
    "strict": true,
    
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    
    "outDir": "dist",
    "removeComments": false,
    
    "preserveConstEnums": true,
    
    "rootDirs": [
        "scripts",
        "tscripts"
    ],
    "baseUrl": "scripts",
    "sourceMap": true,
    "paths": {
      "yoni-mcscripts-lib": [
          "scripts/yoni/",
          "tscripts/yoni/"
      ]
    },
    
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "@types/yoni-mcscripts-lib"
    
  },
  "include": [
    "scripts/**/*.js",
    "tscripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "@types",
    "**/*.spec.ts"
  ]
}
